	"Start up":{
		"prefix": "#include",
		"body": [
			"#include <bits/stdc++.h>",
			"using namespace std;",
			"",
			"int main(){",
			"\tios_base::sync_with_stdio(0);",
			"\tcin.tie(0);",
			"\tcout.tie(0);",
			"",
			"\t$0",
			"}"
		],
		"description": "Start up"
	},

	"Freopen":{
		"prefix": "fre",
		"body": [
			"freopen(\"$1.inp\", \"r\", stdin);",
			"freopen(\"$1.out\", \"w\", stdout);",
			"$0"
		],
		"description": "Freopen"
	},

	"Beginend":{
		"prefix": "begin",
		"body": [
			"$1.begin(), $1.end()$0",
		],
		"description": "Beginend"
	},
}